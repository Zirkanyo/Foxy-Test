{
  "name": "foxy",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "concurrently": "3.5.1",
    "lite-server": "2.0.1",
    "json-server": "0.12.1",
    "mkdir": "0.0.2",
    "lint": "1.1.2",
    "nodemon": "1.17.1",
    "mocha": "5.0.4",
    "pug": "2.0.1",
    "pug-cli": "1.0.0-alpha6",
    "node-sass": "4.7.2"
  },
  "devDependencies": {},
  "scripts": {
    "start": "concurrently -k \"npm run dev\" \"npm run watch-css\"",
    "dev": "lite-server",
    "db": "json-server --watch db.json --port 3005",
    "build-js": "mkdir -p dist/js && uglifyjs src/js/*.js -m -o dist/js/app.js",
    "lint": "lint jshint src/**/**.js",
    "build-css": "node-sass --include-path sass src/sass/style.sass dist/assets/css/style.css",
    "build-html": "pug --watch src/html/index.pug --prety",
    "watch-css": "nodemon -e sass -x \"npm run build-css\"",
    "test": "mocha test",
    "pretest": "npm run lint",
    "posttest": "echo the test has been run!",
    "bash": "Location of the bash/shell script file",
    "dist": "concurrently -k \"npm run build-css\" \"npm run build-html\""
  },
  "author": "",
  "license": "ISC"
}
